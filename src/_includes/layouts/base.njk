            <div class="item sidebar {% if page.url != '/' %}post-sidebar{% endif %}">
                {# <h1 class="title"></h1> #}
                <div class="social-links">               
                <a href="https://www.instagram.com/wash_your_manipulators/" class="social">Instagram</a>
                <a href="mailto:alex.harding.info@gmail.com" class="social">Email</a>
                <a href="https://bsky.app/profile/alexharding.bsky.social" class="social">Bluesky</a>
                </div>
                <div class="big-side-text">
                <a href="{{ site.pathPrefix }}" class="side-text">
                alexharding
                </div>
            </a>
            </div>
        </div>
    </body>
</html>